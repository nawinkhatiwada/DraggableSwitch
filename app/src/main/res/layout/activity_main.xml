<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:draggableSwitch="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nawin.androidragger.dragableswitch.MainActivity">

    <com.nawin.androidragger.switchlibrary.DraggableSwitch
        android:id="@+id/draggableSwitch"
        style="@style/draggableSwitchStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        draggableSwitch:drawableOn="@drawable/bg_blue"
        draggableSwitch:textOff="Sashi"
        draggableSwitch:textOn="Nawin" />

</RelativeLayout>
