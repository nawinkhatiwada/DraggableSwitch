<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="draggableSwitchStyle">
        <item name="track">@drawable/bg_red_with_radius</item>
        <item name="thumb">@drawable/bg_touched</item>
        <item name="draggableTextAppearanceAttr">@style/draggableTextAppearance</item>
        <item name="textOn">ON</item>
        <item name="textOff">OFF</item>
        <item name="pushStyle">false</item>
        <item name="textOnThumb">true</item>
        <item name="thumbExtraMovement">0dp</item>
        <item name="thumbTextPadding">6dp</item>
        <item name="trackTextPadding">6dp</item>
        <item name="switchMinWidth">69dp</item>
        <item name="switchMinHeight">36dp</item>
        <!--<item name="switchPadding">6dp</item>-->
    </style>

    <style name="draggableTextAppearance">
        <item name="textColor">#ffffff</item>
        <item name="textColorHighlight">#ffffff</item>
        <item name="textColorHint">#ffffff</item>
        <item name="textColorLink">#ffffff</item>
        <item name="textSize">16sp</item>
        <item name="textStyle">normal</item>
    </style>

        <style name="SwitchText">
            <item name="android:paddingLeft">8dp</item>
            <!--<item name="android:paddingBottom">8dp</item>-->
            <item name="android:textColor">#ffffff</item>
            <item name="android:textSize">24sp</item>
            <item name="android:shadowColor">#BB000000</item>
            <item name="android:shadowDx">1</item>
            <item name="android:shadowDy">1</item>
            <item name="android:shadowRadius">1</item>
        </style>
</resources>